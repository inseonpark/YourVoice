<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 툴바, 추가된 소스 -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#83ffa200"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TabWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/underline"
                android:id="@android:id/tabs">
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:id="@+id/tab_friendList">

                    <ListView
                        android:id="@+id/friend_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp">
                    </ListView>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tab_recentCall">

                    <ListView
                        android:id="@+id/recent_call_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp">
                    </ListView>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tab_addFriend"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="40dp">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:id="@+id/addFriendId"
                            android:background="#ffffff"
                            android:textCursorDrawable="@drawable/cursor_black"
                            android:paddingLeft="10dp"
                            android:layout_marginRight="2dp"
                            android:inputType="text"
                            android:ems="10"
                            android:maxLength="11"/>

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="#83ffa200"
                            android:onClick="addFriend"
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:text="＋"/>

                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>
        </TabHost>
    </LinearLayout>

